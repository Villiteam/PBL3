@model IEnumerable<PBL3.Models.Category>
@if (Model != null && Model.Any())
{
    <ul class="sidebar_categories">
        <li class="active"><a href="~/Product"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>All</a></li>
        @foreach (var item in Model)
        {
            if (ViewBag.CatID == item.CatID)
            {
                <li class="active"><a href="/danh-muc-san-pham/@(item.CatID)"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.CatName</a></li>
            }
            else
            {
                <li><a href="/danh-muc-san-pham/@(item.CatID)">@item.CatName</a></li>
            }

        }

        @*
        <li><a href="#">Accessories</a></li>
        <li><a href="#">New Arrivals</a></li>
        <li><a href="#">Collection</a></li>
        <li><a href="#">Shop</a></li>*@
    </ul>
}
