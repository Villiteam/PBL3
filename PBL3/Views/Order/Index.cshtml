                                                        CssClass = "pagination",
                                                        PageClasses = new[] { "page-link" },
                                                        LinkClasses = new[] { "page-link" },
                                                        ActiveDisabledElementClasses = new[] { "active", "disabled" },
                                                        NumericPagerItemContainerClasses = new[] { "pagination" },
                                                        NumericPagerItemClasses = new[] { "page-item" }
                                                    })
