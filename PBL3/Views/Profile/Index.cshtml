@model PBL3.Models.User
@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Views/Shared/LayoutUser.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/single_styles.css">
<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/single_responsive.css">

<div class="container single_product_container ">
    <div class="row">
        <div class="col-lg-12">
            <section>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Thông tin tài khoản</h3>
                    </div>
                    <section class="content">
                        <!-- Default box -->
                        <div class="card">
                            @if (Model != null && Model.UserName != null)
                            {
                                <div class="card-body text-center">
                                    <div class="row">
                                        <div class="col-md-2"></div>
                                        <div class="col-md-8">
                                            <!-- Profile Image -->
                                            <div class="card card-primary card-outline">
                                                <div class="card-body box-profile">
                                                    <div class="text-center">
                                                        <div class="row">
                                                            <div class="col-4"></div>
                                                            <div class="col-4">
                                                                @if (Model.Avatar == null)
                                                                {
                                                                    <img class="imgproduct img-circle" data-id="@Model.UserID" src="~/Uploads/_thumbs/upng.png" width="100" />
                                                                }
                                                                else
                                                                {
                                                                    <img class="imgproduct img-circle" data-id="@Model.UserID" src="@Model.Avatar" width="100" />
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <h3 class="profile-username text-center">@Model.UserName</h3>

                                                    <p class="text-muted text-center">Quyền truy cập: @Model.Role1.RoleName </p>
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>Họ và tên: </label>
                                                                <input readonly class="form-control" value="@Model.UserName"/> 
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>Địa chỉ: </label>
                                                                <input readonly class="form-control" value="@Model.Address" />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>Email:</label>
                                                                <input readonly  class="form-control" value="@Model.Email" />
                                                            </div>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <div class="form-group">
                                                                <label>Số điện thoại</label>
                                                                <input readonly class="form-control" value="@Model.Phone" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-md-12 text-right">
                                                            <a href="~/Profile/Edit?id=@Model.UserID" class="btn btn-sm btn-success end float-right">Cập nhật</a>
                                                        </div>
                                                    </div>

                                                </div>
                                                <!-- /.card-body -->
                                            </div>
                                            <!-- /.card -->
                                        </div>
                                        <div class="col-md-2"></div>
                                        <!-- /.col -->

                                    </div>
                                    <!-- /.row -->
                                </div>
                            }
                        </div>
                    </section>

                </div>
            </section>

        </div>
    </div>
</div>
