@section DoanJs{

    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script>

        $(document).ready(function () {
            /* hien thi form upload anh*/
            $("#dialog").dialog({
                autoOpen: false,
                show: "fade",
                hide: "fade",
                modal: true,
                height: '500',
                width: '600',
                resizable: true,
                title: 'Danh sách ảnh',
                close: function () {
                    window.location.reload();
                }
            });
            $('body').on('click', '.imgproduct', function () {
                var proid = $(this).attr("data-id");
                $("#dialog #myIframe").attr("src", "/ProductImage/Index?id=" + proid);
                $('#dialog').dialog('open');
                return false;
            });
        });
    </script>
}
