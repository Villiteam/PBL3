@model PagedList.PagedList<PBL3.Models.Product>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <!-- Left navbar links -->
    <li class="nav-item d-none d-sm-inline-block">
        <a href="#" class="nav-link">Quản lý sản phẩm</a>
    </li>

}
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý sản phẩm</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Quản lý sản phẩm</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Danh sách sản phẩm</h3>

            <div class="card-tools">
                <a href="~/Admin/Product/Add" class="btn btn-primary">Thêm mới</a>
            </div>
        </div>
        <div class="card-body text-center">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Tiêu đề</th>
                        <th>Danh mục</th>
                        <th>Số lượng</th>
                        <th>Giá</th>
                        <th>Ngày tạo</th>
                        <th>Trang chủ</th>
                        <th>Khuyến mãi</th>
                        <th>Hiển thị</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        var i = ViewBag.Page;
                        foreach (var item in Model)
                        {
                            var strCheck = item.Status ? "<i class='fa fa-check text-success'></i>" : " <i class='fas fa-times text-danger'></i>";
                            <tr>
                                <td>@i</td>
                                <td>
                                    <button type="button" class="btn">
                                        @*<img class="imgproduct" data-id="@item.ProductID" src="@item.ProductImages.FirstOrDefault(x=>x.isDefault).Image" width="60" />*@
                                        <img class="imgproduct" data-id="@item.ProductID" src="@item.ListImages" width="60" />
                                    </button>
                                </td>
                                <td>@item.ProductName</td>
                                <td>@item.Title</td>
                                <td>@item.Category.CatName</td>
                                <td>@item.Quantity</td>
                                <td>@item.Price.ToString("N0")</td>
                                <td>@item.CreateDate</td>
                                <td>
                                    <a href="#" data-id="@item.ProductID" data-status="@item.isHome" class="btnHome"> @Html.Raw(strCheck)</a>
                                </td>
                                <td>
                                    <a href="#" data-id="@item.ProductID" data-status="@item.isSale" class="btnSale"> @Html.Raw(strCheck)</a>
                                </td>
                                <td>
                                    <a href="#" data-id="@item.ProductID" data-status="@item.Status" class="btnStatus"> @Html.Raw(strCheck)</a>
                                </td>
                                <td>
                                    @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, new { @class = "btn btn-sm btn-primary" })
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-sm btn-danger delete-link", onclick = "return confirm('Bạn có chắc muốn xóa?');" })
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">Không có bản ghi nào</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6 " style="text-align: center">  @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))</div>
                <div class="col-md-3"></div>
            </div>

        </div>
        <!-- /.card-body -->
        <div class="card-footer">

        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
<div id="dialog">
    <iframe id="myIframe" style="border :0; width: 100%;height: 100%;"></iframe>
</div>


@section DoanJs{

    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.js"></script>
    <script>

        $(document).ready(function () {
            /* hien thi form upload anh*/
            $("#dialog").dialog({
                autoOpen: false,
                show: "fade",
                hide: "fade",
                modal: true,
                height: '500',
                width: '600',
                resizable: true,
                title: 'Danh sách ảnh',
                close: function () {
                    window.location.reload();
                }
            });
            $('body').on('click', '.imgproduct', function () {
                var proid = $(this).attr("data-id");
                $("#dialog #myIframe").attr("src", "/Admin/ProductImage/Index?id=" + proid);
                $('#dialog').dialog('open');
                return false;
            });
            $('body').on('click', '.btnStatus', function (e) {
                e.preventDefault();
                debugger;
                var btn = $(this);
                var id = btn.data("id");
                $.ajax({
                    url: '/Admin/Product/Status',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (rs.isActive) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>");
                            }
                        }

                    }
                });

            });
            $('body').on('click', '.btnHome', function (e) {
                e.preventDefault();
                debugger;
                var btn = $(this);
                var id = btn.data("id");
                $.ajax({
                    url: '/Admin/Product/isHome',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (rs.isActive) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>");
                            }
                        }

                    }
                });

            });
            $('body').on('click', '.btnSale', function (e) {
                e.preventDefault();
                debugger;
                var btn = $(this);
                var id = btn.data("id");
                $.ajax({
                    url: '/Admin/Product/isSale',
                    type: 'POST',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            if (rs.isActive) {
                                btn.html("<i class='fa fa-check text-success'></i>");
                            } else {
                                btn.html("<i class='fas fa-times text-danger'></i>");
                            }
                        }

                    }
                });

            });
        });
    </script>
}
