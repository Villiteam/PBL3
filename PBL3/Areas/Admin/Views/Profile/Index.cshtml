@model PBL3.Models.User
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <!-- Left navbar links -->
    <li class="nav-item d-none d-sm-inline-block">
        <a href="#" class="nav-link">Thông tin cá nhân</a>
    </li>

}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thông tin cá nhân</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Thông tin cá nhân</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>


<section class="content">
    <!-- Default box -->
    <div class="card">
        @if (Model != null)
        {
            <div class="card-body text-center">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-8">
                        <!-- Profile Image -->
                        <div class="card card-primary card-outline">
                            <div class="card-body box-profile">
                                <div class="text-center">
                                    <button type="button" class="btn">
                                        <img class="imgproduct img-circle" data-id="@Model.UserID" src="@Model.Avatar" width="100" />
                                    </button>
                                </div>

                                <h3 class="profile-username text-center">@Model.UserName</h3>

                                <p class="text-muted text-center">Quyền truy cập: @Model.Role1.RoleName </p>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Họ và tên: </label>
                                            <p class="form-control">@Model.UserName</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Địa chỉ: </label>
                                            <p class="form-control">@Model.Address</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Email:</label>
                                            <p class="form-control">@Model.Email</p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Số điện thoại</label>
                                            <p class="form-control">@Model.Phone</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12 text-right">
                                        <a href="~/Admin/Profile/Edit?id=@Model.UserID" class="btn btn-sm btn-success end float-right">Cập nhật</a>
                                    </div>
                                </div>

                            </div>
                            <!-- /.card-body -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <div class="col-md-2"></div>
                    <!-- /.col -->

                </div>
                <!-- /.row -->
            </div>
        }
    </div>
</section>
@section DoanJS{
    <script>
      const successMessage = '@TempData["successMessage"]';
        if (successMessage) {
            Swal.fire({
                position: 'top-end',
                toast: true,
                icon: 'success',
                title: successMessage,
                showConfirmButton: false,
                timer: 3000,
                timerProgressBar: true,
                customClass: {
                    popup: 'border-left-3px-green'
                }
            })
      }
    </script>
}